{
	"observable": {
		"prefix": "obs",
		"body": [
			"//@observable",
			"${1:String} get ${2:value} => _${2:value}.value;",
			"final _${2:value} = Observable(${3:DEFAULT});",
			"set ${2:value}(${1:String} ${2:value}) => _set${2:value}([${2:value}]);",
			"late final _set${2:value} = __set${2:value}.action;",
			"void __set${2:value}(${1:String} value) => _${2:value}.value = value;",
			"//@-observable"
		],
		"description": "observable"
	  },
	  "computed": {
		"prefix": "comp",
		"body": [
			"//@computed",
			"${1:String} get ${2:value} => _${2:value}.computed<${1:String}>().value;",
			"${1:String} _${2:value}() {}", 
			"//@-computed"
		],
		"description": "computed"
	  },
	  "action": {
		"prefix": "act",
		"body": [
			"//@action",
			"void ${1:name}(${2:params}) => _${1:name}Action([${3:paramNames}]);",
			"late final _${1:name}Action = _${1:name}.action;",
			"void _${1:name}(${2:params}) {}",
			"//@-action"
		],
		"description": "action"
	  }

}