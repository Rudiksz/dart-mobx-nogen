{
	"observable": {
		"prefix": "obs",
		"body": [
			"//@observable",
			"${1:String} get ${2:value} => _${2:value}.value;",
			"final _${2:value} = Observable(${3:DEFAULT});",
			"set ${2:value}(${1:String} ${2:value}) => set${2:value}([${2:value}]);",
			"late final set${2:value} = _set${2:value}.action;",
			"void _set${2:value}(${1:String} value) => _${2:value}.value = value;",
			"//@-observable"
		],
		"description": "observable"
	  },
	  "computed": {
		"prefix": "comp",
		"body": [
			"//@computed",
			"${1:String} get ${2:value} => _${2:value}.computed<${1:String}>().value;",
			"${1:String} _${2:value}() => throw Exception('${2:value} is not implemented');", 
			"//@-computed"
		],
		"description": "computed"
	  },
	  "action": {
		"prefix": "act",
		"body": [
		  "//@action",
		  "late final ${1:action} = _${1:action}.action;",
		  "void _${1:action}() {",
		  "}",
		  "//@-action"
		],
		"description": "action"
	  }

}